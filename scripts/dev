#!/usr/bin/env bash
# SPDX-License-Identifier: MPL-2.0
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
# shellcheck source=scripts/_helpers.sh
source "$SCRIPT_DIR/_helpers.sh"

export PYTHONPATH="$ROOT_DIR/src:${PYTHONPATH:-}"
ensure_venv

if [[ -x "$VENV_PATH/bin/ptw" ]]; then
  with_env "$VENV_PATH/bin/ptw" --runner "pytest --maxfail=1 --disable-warnings" "$@"
else
  with_env in_venv pytest --maxfail=1 --disable-warnings "$@"
fi
